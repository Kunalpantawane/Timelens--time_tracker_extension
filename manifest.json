{
  "manifest_version": 3,
  "name": "TimeLens - Productivity Tracker",
  "description": "Track your time and boost productivity with detailed insights and beautiful analytics.",
  "version": "2.0",
  "permissions": ["tabs", "storage", "activeTab", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TimeLens - Track Your Productivity"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["dashboard/dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}